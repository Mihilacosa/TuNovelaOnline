<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/fondo"
            android:orientation="vertical"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TamaÃ±o de letra:"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_menos"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="-"
                    android:textSize="20sp"
                    app:backgroundTint="@color/purple_500" />

                <TextView
                    android:id="@+id/text_tamano"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_mas"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="+"
                    android:textSize="20sp"
                    app:backgroundTint="@color/purple_500" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Fuente de letra:"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/array_fuente" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fondo de lectura:"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_blanco"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Blanco"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/btn_oscuro"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:text="Oscuro"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    app:backgroundTint="#262626">

                </Button>

                <Button
                    android:id="@+id/btn_crema"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Crema"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    app:backgroundTint="#e8dfbf">

                </Button>

            </LinearLayout>

            <Button
                android:id="@+id/btnEnviar_preferencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="12dp"
                android:text="Guardar"
                android:textColor="#FFFFFF"
                app:backgroundTint="@color/purple_500" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>