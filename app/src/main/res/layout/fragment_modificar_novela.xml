                        android:text="Novela Japonesa" />

                    <CheckBox
                        android:id="@+id/modi_checkBox23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Novela ligera" />

                    <CheckBox
                        android:id="@+id/modi_checkBox25"
                        android:layout_width="wrap_content"
