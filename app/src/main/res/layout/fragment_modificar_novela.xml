                        android:text="Recuerdo de vida" />

                    <CheckBox
                        android:id="@+id/modi_checkBox29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seinen" />

                    <CheckBox
                        android:id="@+id/modi_checkBox31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shounen" />

                    <CheckBox
                        android:id="@+id/modi_checkBox33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tragedia" />

                    <CheckBox
                        android:id="@+id/modi_checkBox35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vida escolar" />

                    <CheckBox
                        android:id="@+id/modi_checkBox37"
