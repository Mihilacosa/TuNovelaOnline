                    <CheckBox
                        android:id="@+id/modi_checkBox24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Novela original" />

                    <CheckBox
                        android:id="@+id/modi_checkBox26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Psicológico" />

                    <CheckBox
                        android:id="@+id/modi_checkBox28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Romance" />

                    <CheckBox
                        android:id="@+id/modi_checkBox30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shojo" />

                    <CheckBox
                        android:id="@+id/modi_checkBox32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sobrenatural" />

                    <CheckBox
                        android:id="@+id/modi_checkBox34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vampiros" />

                    <CheckBox
                        android:id="@+id/modi_checkBox36"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wuxia" />

                    <CheckBox
                        android:id="@+id/modi_checkBox38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xuanhuan" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/modi_btnEnviar_novela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/purple_500"
            android:textColor="#FFFFFF"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Modificar" />
    </LinearLayout>
</ScrollView>