                        android:text="Yaoi" />

                    <CheckBox
                        android:id="@+id/modi_checkBox40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yuri" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/modi_checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adulto" />

                    <CheckBox
                        android:id="@+id/modi_checkBox4"
                        android:layout_width="wrap_content"
