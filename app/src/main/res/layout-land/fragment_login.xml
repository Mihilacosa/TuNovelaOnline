<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="@string/inicio_de_sesi_n"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="135dp"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="84dp"
                android:layout_marginRight="84dp"
                android:text="@string/email"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/Email_login"
                android:layout_width="288dp"
                android:layout_height="50dp"
                android:layout_marginEnd="160dp"
                android:layout_marginRight="160dp"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textEmailAddress"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="135dp"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/contrase_a"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/Contrasena_login"
                android:layout_width="288dp"
                android:layout_height="50dp"
                android:layout_marginEnd="160dp"
                android:layout_marginRight="160dp"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPassword"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/humano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="428dp"
            android:layout_marginLeft="428dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="18dp"
            android:text="@string/soy_humano"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:layout_marginBottom="2dp"
            android:text="@string/no_tienes_cuanta"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/RegistroInicio"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/purple_500"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:text="@string/registrarse"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/bLogin"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/purple_500"
                android:textColor="#FFFFFF"
                android:text="@string/iniciar_sesi_n"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>