<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="@string/crear_cuenta"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="159dp"
                android:layout_marginRight="159dp"
                android:text="@string/usuario"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/CrearUsuario"
                android:layout_width="288dp"
                android:layout_height="50dp"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="182dp"
                android:layout_marginRight="182dp"
                android:text="@string/email"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/CrearEmail"
                android:layout_width="288dp"
                android:layout_height="50dp"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textEmailAddress"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="118dp"
                android:layout_marginRight="118dp"
                android:text="@string/contrase_a_registro"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/CrearContrasena1"
                android:layout_width="288dp"
                android:layout_height="50dp"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPassword"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/confirmar_contrase_a"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ConbContrasena1"
                android:layout_width="288dp"
                android:layout_height="50dp"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPassword"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="2dp"
            android:text="@string/tienes_cuenta"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/InicioRegistro"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/purple_500"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:text="@string/bt_iniciar_sesi_n_registro"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/bCrearCuenta"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/purple_500"
                android:textColor="#FFFFFF"
                android:text="@string/crear_cuenta_registro"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>