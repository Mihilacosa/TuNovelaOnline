                android:textSize="16sp" />

            <EditText
                android:id="@+id/nuevo_contenido_cap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />
